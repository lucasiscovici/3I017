(function() {
    if (typeof Messages !== "undefined") {
    return;
  	}

	this.Messages = function(m) {
    this.m=m["response"]["messages"];
    if (typeof(this.m)=="string"){
    	this.m = [];
    }
  }
	Messages.prototype.getHtml = function() {
		return this.getHtml();
  	}
  function getHtml(a) {
      html = "";
      for (var i = 0; i < this.m.length; i++) {
    	  html+=Message(this.m[i]).getHTML();
      }
      return html;
  }

