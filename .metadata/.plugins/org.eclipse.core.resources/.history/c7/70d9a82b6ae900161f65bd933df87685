package friend;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.json.JSONException;

import util.Error;
import util.IOLUCAS;
import util.io;

public class Search extends HttpServlet implements IOLUCAS {
	public HttpServletResponse response = null;
	private String id_friend;
	private String token;
	private String query;

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	public void koko(String id_friend, String key,String query) throws JSONException, IOException {
		this.id_friend = id_friend;
		this.token = key;
		this.query = query;
		if (id_friend == null || token == null || query == null) {
			io.print_json_or_print(response, Error.ErrArgs.to_JSON());
		}

		
	}
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		// TODO Auto-generated method stub
		this.response  = resp;
		req.
		try {
			koko(req.getParameter("id_friend"), req.getParameter("key"), req.getParameter("query"));
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	
}
