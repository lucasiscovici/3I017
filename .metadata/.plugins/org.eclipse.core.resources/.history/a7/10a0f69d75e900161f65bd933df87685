package util.db;

import java.sql.SQLException;

public class db_User_Helper {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	public boolean CheckIfExist(String login) throws NumberFormatException, SQLException {
		return Integer.parseInt(bd_Helper.select("SELECT COUNT(id) as count FROM User WHERE login = "+login).getValue("count")) > 0; 
	}
}
